extends base.pug

block scripts 
    script(src="/static/index.js") 

block style 
    style 
        include ../static/style.css
        include ../static/contactstyle.css

block content 
    div.container
        h3 Contact us
        form(action="/contact",method = "post", class='font-contact') 
            input(type="text" name= "name" class= "form" placeholder="enter your name")
            input(type="phone" name= "number" class= "form" placeholder="enter your number")
            input(type="email" name= "email" class= "form" placeholder="enter your email")
            input(type="password" name= "password" class= "form" placeholder="enter your password")
            button(class="btn")
                | submit
            